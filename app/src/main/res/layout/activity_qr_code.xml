<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_background"
    tools:context="com.example.attendance.QrCodeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/code_toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="二维码签到"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/week_layout"
        android:layout_below="@id/code_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/di"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_marginLeft="100dp"/>
            <RelativeLayout
                android:id="@+id/rela"
                android:layout_toRightOf="@id/di"
                android:layout_width="70dp"
                android:layout_height="fill_parent">

                <EditText
                    android:id="@+id/accountweek"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_margin="3dip"
                    android:imeOptions="actionNext"
                    android:textSize="20sp"
                    android:focusable="false"
                    android:clickable="false"
                    android:background="#ffff" />
                <ImageView
                    android:id="@+id/down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/down_arrow"
                    android:layout_alignRight="@id/accountweek"
                    android:layout_marginTop="15dp"
                    />

            </RelativeLayout>
            <TextView
                android:id="@+id/zhou"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周"
                android:textSize="20sp"
                android:layout_toRightOf="@id/rela"/>
            <Button
                android:id="@+id/attendanbtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="考勤"
                android:textSize="19sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/codeImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/week_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:id="@+id/at_layout"
        android:layout_below="@id/codeImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/showText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前考勤人数："
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/code_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/showText"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            />
    </RelativeLayout>


</RelativeLayout>
